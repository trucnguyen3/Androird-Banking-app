<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFragment">

    <ScrollView
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Wallet Balance Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@android:color/transparent">

                <ImageView
                    android:id="@+id/cardImage"
                    android:src="@drawable/credit_card_bg"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Available Balance"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtBalance"
                        android:text="₫ 25,800,000"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <TextView
                android:text="Quick Actions"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:columnCount="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true">

                <!-- Deposit -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_deposit"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="Deposit"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Top Up -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_topup"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="Top Up"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Withdraw -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_transfer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:text="Withdraw"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </GridLayout>

            <!-- Recent Transactions -->
            <TextView
                android:text="Recent Transactions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Transaction item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_transaction_item"
                    android:padding="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:src="@drawable/ic_money_out"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="14dp">

                        <TextView
                            android:text="Shopping"
                            android:textSize="16sp"
                            android:textColor="#333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Yesterday • 2:45 PM"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="-₫ 1,200,000"
                        android:textColor="#D9534F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_transaction_item"
                    android:padding="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:src="@drawable/ic_money_out"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="14dp">

                        <TextView
                            android:text="Coffee"
                            android:textSize="16sp"
                            android:textColor="#333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Today • 5:45 PM"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="-₫ 100,000"
                        android:textColor="#D9534F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_transaction_item"
                    android:padding="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:src="@drawable/ic_money_in"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="14dp">

                        <TextView
                            android:text="TV Gift"
                            android:textSize="16sp"
                            android:textColor="#333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Today • 7:00 PM"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="+₫ 5,000,000"
                        android:textColor="#4C956C"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>