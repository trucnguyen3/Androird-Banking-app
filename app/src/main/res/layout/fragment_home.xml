<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/homeScroll"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_header_home"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/txtWelcome"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="Notifications"
                    android:padding="4dp"/>
            </LinearLayout>

            <!-- Balance Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@android:color/transparent">

                <ImageView
                    android:id="@+id/cardImage"
                    android:src="@drawable/credit_card_bg"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Available Balance"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtBalance"
                        android:text="â‚« 25,800,000"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="**** 8291"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Action Title -->
            <TextView
                android:text="Quick Actions"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Quick Actions Grid -->
            <GridLayout
                android:columnCount="3"
                android:useDefaultMargins="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Deposit -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_deposit"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="Deposit"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Top Up -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_topup"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="Top Up"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Apply Card -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="Apply Card"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Transfer -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_transfer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="Transfer"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Pay Bills -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_bill"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="Pay Bills"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- History -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:background="@drawable/circle_bg"
                        android:padding="15dp"
                        android:src="@drawable/ic_history"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <TextView
                        android:text="History"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </GridLayout>

            <!-- News Carousel -->
            <TextView
                android:text="Latest News"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/newsViewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>